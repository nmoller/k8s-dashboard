{{> head-html }}

<body>
<div id="wrapper">
<!-- Navigation -->
{{> navigation }}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Namespace <small>{{namespace}}</small>
                    </h1>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> {{namespace}}
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    {{> object-service}}
                </div>
                <div class="col-lg-4">
                    {{> object-pod}}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-map-signs fa-fw"></i> Services</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                {{#services}}
                                    <a href="#" class="list-group-item">
                                        <span class="badge">svc</span>
                                        <i class="fa fa-fw fa-tag"></i> {{.}}
                                    </a>
                                {{/services}}
                            </div>
                                <!-- Trigger the modal with a button -->
                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Info</button>

                                {{> services-modal }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-cubes fa-fw"></i> Pods</h3>
                        </div>
                        <div class="panel-body">
                            <div class="list-group">
                                {{#pods_names}}
                                    <a href="#" class="list-group-item">
                                        <span class="badge">pod</span>
                                        <i class="fa fa-fw fa-tag"></i> {{.}}
                                    </a>
                                {{/pods_names}}
                            </div>
                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#podsModal">Info</button>

                            {{> pods-modal }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-file-o fa-fw"></i>Create service file yaml</h3>
                    </div>
                    <div class="panel-body">
                        {{> service_form }}
                    </div>
                </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

{{> js }}

</body>

</html>